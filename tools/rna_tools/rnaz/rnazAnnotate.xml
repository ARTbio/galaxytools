<tool id="rnazAnnotate" name="rnazAnnotate.pl" version="0.1.0">
    <requirements>
        <requirement type="package">rnaz</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
    rnazAnnotate.pl
	--bed $bed
	$input
	> $output
    ]]></command>
    <inputs>
		<param format="txt" name="input" type="data" label="RNAz output to annotate" />
        <param type="data" name="bed" format="bed" label="Bed file with annotation" />
    </inputs>
    <outputs>
        <data name="output" format="text" />
    </outputs>
    <tests>
        <test>
            <param name="input" value="exin"/>
            <output name="output" file="exout"/>
        </test>
    </tests>
    <help><![CDATA[

    Usage:
    rnazAnnotate.pl [options] [file]
	
	Options: 
	-b, --bed Set the annotation BED file with this option.

    ]]></help>

    <citations>
        <citation type="doi">10.1142/9789814295291_0009</citation>
    </citations>    

</tool>
