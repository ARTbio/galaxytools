<tool id="rnazSort" name="rnazSort.pl" version="0.1.0">
    <requirements>
        <requirement type="package">rnaz</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
    rnazSort.pl
	$reverse
	$noloci
	'$input'
    > '$output' 
    ]]></command>
    <inputs>
        <param type="data" name="input" format="text" />
		<param argument="--reverse" type="boolean" checked="false" truevalue="--reverse" falsevalue="" label="Sort in reverse order" />
		<param argument="--no-loci" name="noloci" type="boolean" checked="false" truevalue="--no-loci" falsevalue="" label="Do not preserve the locus grouping but simply sort the windows." />
    </inputs>
    <outputs>
        <data name="output" format="data" from_work_dir="exout" />
    </outputs>
    <tests>
        <test>
            <param name="input" value="tRNA1.rnaz.filtered"/>
            <output name="output" file=""/>
        </test>
    </tests>
    <help><![CDATA[

    Usage:
    rnazSort.pl [options] key [file]

	Options: 
	-r, --reverse Sort in reverse order.

    --no-loci Do not preserve the locus grouping but simply sort the
    windows.

    ]]></help>

    <citations>
        <citation type="doi">10.1142/9789814295291_0009</citation>
    </citations>    

</tool>
